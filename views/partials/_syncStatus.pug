div#redtail-sync-status-container.sync-status-popup(style='display: none;')

  // 1) PREPARING PHASE GIF CONTAINER
  div#gifContainer(style='display:none; text-align: center; margin-top:10px;')
    p(style='margin-top: 10px; font-weight: bold;')
      | Preparing your sync...
    img.preparing-sync-giph(
      src='/images/loading.gif'
      alt='Preparing your sync...'
      style='width: 180px; height: auto;'
    )


  // 2) Normal Sync Header & Progress UI
  .sync-header
    span#syncPercentage 0%
    button#syncStatusCloseBtn(type='button' disabled style='margin-left: auto; pointer-events: none;')
      .material-symbols-outlined close

  .sync-message
    p.bold Syncing data from Redtail...
    p Please do not refresh or close your browser.

    // Area for estimated time remaining
    p
      | Estimated Time Remaining:
      span#syncETA calculating...

  // Progress bar
  .progress#syncProgressBarContainer(style='height: 6px; margin-top: 10px;')
    .progress-bar#syncProgressBar(
      role='progressbar'
      aria-valuenow='0'
      aria-valuemin='0'
      aria-valuemax='100'
      style='width: 0%;'
    )

  // Large icon shown after refresh (success or error)
  div#syncFinalIconContainer(style='display: none; margin-top: 10px; text-align: center;')
    .material-symbols-outlined#syncFinalIcon(style='font-size: 48px;')
      | check_circle

  // Final message area (success or error)
  p#syncFinalMessage(style='display: none; margin-top: 10px; font-weight: bold; text-align: center;')
    | <!-- This remains hidden until the sync ends -->
