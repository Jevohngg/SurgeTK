    .col-md-6.mb-3
      label.form-label(for='primaryAllocation') Primary Beneficiary Allocation (%)
      select.form-select(name='primaryAllocation')
        option(value='') -- Select Column --

    // Contingent fields
    .col-md-6.mb-3
      label.form-label(for='contingentName') Contingent Beneficiary Name (Last, First)
