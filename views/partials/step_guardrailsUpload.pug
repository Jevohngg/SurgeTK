div#guardrails-upload-step
  .upload-box.account-upload-box.guardrails-upload-box#guardrails-file-dropzone
    span.upload-icon.material-symbols-outlined upload
    label.custom-upload-button(for='guardrails-file-input') Choose File
    .upload-box-text
      span.or-text.clickToUpload Click to upload
      span.or-text or drag and drop CSV or Excel files.

  .upload-progress.hidden#guardrails-upload-progress
    .progress
      div#guardrails-progress-bar.progress-bar.progress-bar-striped.progress-bar-animated(
        role='progressbar',
        aria-valuenow='0',
        aria-valuemin='0',
        aria-valuemax='100',
        style='width: 0%'
      ) 0%
    .file-details.mt-2
      img#guardrails-file-icon(src='images/excel-file-icon.png', alt='File Icon', width='30', height='30')
      span#guardrails-uploaded-file-name.text-muted Uploading...

  .upload-completed.hidden#guardrails-upload-completed
    .d-flex.align-items-center
      .fileIconContainer
        img.fileCompletedIcon(src='images/check_circle.png')
        img#guardrails-completed-file-icon(src='images/excel-file-icon.png', alt='File Icon', width='30', height='30', class='me-2')
      span#guardrails-completed-file-name.text-muted File Uploaded Successfully
    button#removeGuardrailsFileButton.btn.btn-danger.btn-sm.ms-auto(type='button') Remove File

  input#guardrails-file-input(
    type='file',
    hidden,
    name='guardrailsFileUpload',
    accept='.csv,.xlsx'
  )
