div#liability-info-step
  // ─── Same wrapper used by other guides (keeps styling consistent) ───
  div.buckets-guide-container
    section.guide(role='region' aria-labelledby='liability-info__title')
      // ───────── Title & intro ─────────
      header.guide__header
        h2#liability-info__title.guide__title Prepare Your Spreadsheet
        p.guide__intro
          | Before importing your 
          strong Liability
          |  data, ensure your spreadsheet includes the following columns.

      // Legend: required vs optional
      .guide__legend(aria-label='Field key')
        span.badge.badge--required Required
        span.badge.badge--optional Optional

      // ───────── Checklist ─────────
      ol.guide-steps
        li.guide-step
          .guide-step__head
            span.field-name Client ID
            span.badge.badge--required Required
          .guide-step__body
            p Ties each loan to the correct client record.

        li.guide-step
          .guide-step__head
            span.field-name Liability Number
            span.badge.badge--required Required
          .guide-step__body
            p Unique account or loan number.

        li.guide-step
          .guide-step__head
            span.field-name Liability Owner Name
            span.badge.badge--optional Optional
          .guide-step__body
            p Use 
              code Joint
              |  to auto-assign both owners.

        li.guide-step
          .guide-step__head
            span.field-name Liability Type
            span.badge.badge--optional Optional
          .guide-step__body
            p For example: 
              code Vehicle Loan
              | , 
              code Home Loan
              | , 
              code Personal Loan
              | .

        li.guide-step
          .guide-step__head
            span.field-name Outstanding Balance
            span.badge.badge--optional Optional
          .guide-step__body
            p Current principal remaining.

        li.guide-step
          .guide-step__head
            span.field-name Creditor Name
            span.badge.badge--optional Optional
          .guide-step__body
            p Institution that holds the note.

        li.guide-step
          .guide-step__head
            span.field-name Liability Name
            span.badge.badge--optional Optional
          .guide-step__body
            p Descriptive name for the liability.

        li.guide-step
          .guide-step__head
            span.field-name Monthly Payment
            span.badge.badge--optional Optional
          .guide-step__body
            p Scheduled payment amount.

        li.guide-step
          .guide-step__head
            span.field-name Estimated Pay-off Date
            span.badge.badge--optional Optional
          .guide-step__body
            p Use 
              code YYYY-MM-DD
              |  or 
              code MM/DD/YYYY
              | .

        // Included to align with tips and example header
        li.guide-step
          .guide-step__head
            span.field-name Interest Rate %
            span.badge.badge--optional Optional
          .guide-step__body
            p Enter the annual interest rate as a percentage.

      // ───────── Best-practice tips ─────────
      section.guide__notes(aria-label='Tips for preparing your file')
        h3.guide__subheading Tips
        ul.guide__list
          li Keep 
            em Liability Number
            |  unique and consistent across uploads to avoid duplicates or errors.
          li Populate 
            em Creditor Name
            |  and 
            em Interest Rate %
            |  for more detailed reporting.
          li Optional fields may be left blank.
          li Source data from any CRM, or start with the template below.

      // ───────── Download + Learn-More links (exact links preserved) ─────────
      section.guide__actions
        a.action.action--primary.import-action-item(
          href='/downloads/liability-import-template.xlsx'
          download
          role='button'
        )
          i.fas.fa-file-download.action__icon(aria-hidden='true')
          span Download the Liability Import template

        a.action.action--ghost.import-action-item.learn-more-btn(
          href='#'
          data-video-id='76979871'
          data-bs-toggle='modal'
          data-bs-target='#learnMoreVideoModal'
          role='button'
        )
          i.fas.fa-play-circle.action__icon(aria-hidden='true')
          span Watch an instructional video (2 min)

      // ───────── Example header row (optional) ─────────
      section.guide__example
        h3.example-title Example header row
        pre.example-code
          code Client ID | Liability Number | Liability Owner Name | Liability Type | Outstanding Balance | Creditor Name | Interest Rate % | Monthly Payment | Estimated Pay-off Date | Liability Name
