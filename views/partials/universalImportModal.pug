div#universal-import-modal.modal.fade(tabindex='-1', aria-hidden='true')
  // Make the modal XL, with a bigger height
  div.modal-dialog.modal-xl(
    style='max-height: 85vh; height: 100vh; width: 90%;'
  )
    div.modal-content(
      style='height: 100%; display: flex; flex-direction: column;'
    )
      div.modal-header
        h5.modal-title Import
        button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')

      // We make .modal-body scrollable
      div.modal-body(
        style='flex:1; overflow-y: auto; position: relative;'
      )
        // Container for steps: absolute-positioned slides
        // We give it a min-height to avoid shrinking too small
        div#import-flow-container.import-flow-container(
          style='position: relative; min-height: 100%; overflow: hidden;'
        )

          //-------------------------------------------------------
          // STEP 1 (Select Contact or Account) - index = 0
          //-------------------------------------------------------
          div.import-step.import-step-1
            h4.mb-4.text-center.import-modal-header Pick Your Data Type
            p.text-muted.text-center.import-modal-subtext 
              | Please choose whether you want to import Contact or Account data.
            .d-flex.justify-content-center.gap-5.mt-4.options-container-data
              // Contact Option
              .data-option(data-type='contact')
                .option-inner
                  i.fas.fa-users.fa-3x.mb-2
                  h5.databox-head Import Client Data
                  p.databox-sub.text-muted.mt-1 Clients & Household Information

              // Account Option
              .data-option(data-type='account')
                .option-inner
                  i.fas.fa-landmark.fa-3x.mb-2
                  h5.databox-head Import Account Data
                  p.databox-sub.text-muted.mt-1 Assets, Liabilities, Insurance, etc.
            //‑‑ helper container (stay empty until JS fills it)
            p#contact-disabled-help.helper-text.hidden
            p#account-disabled-help.helper-text.hidden
              






          // 1‑3 ─ Contact
          div.import-step.import-step-1.hidden
            include step_contactInfo
          div.import-step.import-step-2.hidden
            include step_contactUpload
          div.import-step.import-step-3.hidden
            include step_contactMapping          

          // 4‑7 ─ Account ‑ General
          div.import-step.import-step-4.hidden
            include step_accountOptions
          div.import-step.import-step-5.hidden
            include step_generalInfo
          div.import-step.import-step-6.hidden
            include step_accountUpload
          div.import-step.import-step-7.hidden
            include step_accountMapping          

          // 8‑10 ─ Buckets
          div.import-step.import-step-8.hidden
            include step_bucketsInfo
          div.import-step.import-step-9.hidden
            include step_bucketsUpload
          div.import-step.import-step-10.hidden
            include step_bucketsMapping          

          // 11‑13 ─ Guardrails
          div.import-step.import-step-11.hidden
            include step_guardrailsInfo
          div.import-step.import-step-12.hidden
            include step_guardrailsUpload
          div.import-step.import-step-13.hidden
            include step_guardrailsMapping          

          // 14‑16 ─ Beneficiary
          div.import-step.import-step-14.hidden
            include step_beneficiaryInfo
          div.import-step.import-step-15.hidden
            include step_beneficiaryUpload
          div.import-step.import-step-16.hidden
            include step_beneficiaryMapping          

          // 17‑19 ─ Billing
          div.import-step.import-step-17.hidden
            include step_billingInfo
          div.import-step.import-step-18.hidden
            include step_billingUpload
          div.import-step.import-step-19.hidden
            include step_billingMapping          

          // 20‑22 ─ Liability
          div.import-step.import-step-20.hidden
            include step_liabilityInfo
          div.import-step.import-step-21.hidden
            include step_liabilityUpload
          div.import-step.import-step-22.hidden
            include step_liabilityMapping          

          // 23‑25 ─ Insurance
          div.import-step.import-step-23.hidden
            include step_insuranceInfo
          div.import-step.import-step-24.hidden
            include step_insuranceUpload
          div.import-step.import-step-25.hidden
            include step_insuranceMapping          

          // 26‑28 ─ Asset
          div.import-step.import-step-26.hidden
            include step_assetInfo
          div.import-step.import-step-27.hidden
            include step_assetUpload
          div.import-step.import-step-28.hidden
            include step_assetMapping          


          
          


      div.modal-footer
        button.btn.btn-secondary#cancelImportBtn(type='button') Cancel
        .button-group-primary
          button.btn.btn-secondary#prevStepBtn(type='button') Back
          button.btn.btn-primary#nextStepBtn(type='button') Next
