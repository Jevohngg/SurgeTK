      .loadable-button .button-text {
        visibility: visible;
        opacity: 1;
        transition: none; /* no fade, instant */
      }     

      /* This wrapper is absolutely centered, hidden by default */
      .loadable-button .button-spinner-wrapper {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        opacity: 0;
        transition: none;
      }     

      /* Let the spinner spin normally via Bootstrap's keyframes. */
      .loadable-button .button-spinner.spinner-border {
        margin: 0 !important;
        line-height: 0 !important; 
        vertical-align: middle !important;
      }     

      /* On .loading, hide text and show spinner instantly */
      .loadable-button.loading .button-text {
        visibility: hidden;
        opacity: 0;
      }
      .loadable-button.loading .button-spinner-wrapper {
        opacity: 1;
      }     

      /* Keep disabled from graying the button out */
      .loadable-button:disabled {
        pointer-events: none;
        opacity: 1;
      }
