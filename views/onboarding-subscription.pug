     #alert-container {
         position: fixed;
         top: 16px;
         right: 16px;
         z-index: 1000;
         display: flex;
         flex-direction: column;
         gap: 8px; /* Space between stacked alerts */
         pointer-events: none; /* Prevent container from capturing pointer events */
     }
     
     /* Alert Styles */
     .alert {
         position: relative;
         display: flex;
         min-width: 400px;
         padding: 16px;
         align-items: flex-start;
         gap: 16px;
         border-radius: 12px;
         border: 1px solid #D0D5DD;
         background-color: #FFF;
         box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1), 0px 1px 3px rgba(0, 0, 0, 0.08);
         opacity: 0;
         transform: translateY(-10px);
         transition: opacity 0.5s ease, transform 0.5s ease; /* Smooth fade-in and slide */
         pointer-events: auto; /* Enable click events within alerts */
     }
     
     .alert.show {
         opacity: 1;
         transform: translateY(0); /* Slide in from top */
     }
     
     .alert.exit {
         transform: translateY(10px); /* Slide down when closing */
         opacity: 0;
         pointer-events: none; /* Disable pointer events after exit */
     }
     
     /* Close button */
     .success-close-container,
     .error-close-container {
         position: absolute;
         top: 8px;
         right: 8px;
         cursor: pointer;
         pointer-events: auto; /* Ensure close button can be clicked */
     }
     
     .successCloseIcon,
     .errorCloseIcon {
         font-size: 20px;
         color: #98A2B3;
     }
     
     /* Success Icon */
     .success-icon-container {
         position: absolute;
         width: 43px;
         height: 43px;
         display: flex;
         justify-content: center;
         align-items: center;
         left: 8px;
         top: 8px;
     }
     
     .success-icon-container i {
