  body
    .brand-logo-container
      img(src= "/images/surgetk_logo_vertical_blue.svg")
    .container#onboardingSubContainer
      
      p.subtext Choose your Plan
      h1 Select the option that best fits your needs

      // Alert container for success/errors
      #alert-container

      // ===============================
      // 1) Plan Selection (Free vs Paid)
      // ===============================
      .plan-section
        label.plan-option#freePlanBlock(for="freePlanRadio")
          // NOTE: removed 'checked' here
          input#freePlanRadio(type="radio", name="planChoice", value="free")
          i.fas.fa-check.free-plan-icon
          .plan-info
            .plan-title Free Plan
            .plan-description
              | $0/month (1 Advisor, 2 Non-Advisors). Limited feature access.

        label.plan-option#paidPlanBlock(for="paidPlanRadio")
          // NOTE: removed 'checked' here
          input#paidPlanRadio(type="radio", name="planChoice", value="pro")
          i.fas.fa-dollar-sign.paid-plan-icon
          .plan-info
            .plan-title Purchase a Plan
            .plan-description
              | $95/month per advisor seat. Access to All features.

      // Show monthly vs. annual + seat fields if paid
      .paid-plan-details(style="display:none;" id="paidPlanDetails")
        .card.mt-4.billing-card
          .card-body
            h5.mb-3.billing-options-text Billing Options
            p.advisor-info Each advisor seat comes with 1 Advisor and 2 Non-Advisors.
      
            // Billing Interval Switcher
            .d-flex.justify-content-between.align-items-center
              
              .btn-group.billing-toggle(role="group" aria-label="Billing Interval")
                input.btn-check#monthlyRadio(type="radio", name="billingInterval", value="monthly", checked)
                label.btn.btn-outline-teal(for="monthlyRadio") Monthly
      
                input.btn-check#annualRadio(type="radio", name="billingInterval", value="annual")
                label.btn.btn-outline-teal(for="annualRadio") Annual
      
            // Seat count & cost fields
            .row.mt-4
              .col-md-6.mb-3.number-advisor-label
                label(for="seatCount") Number of Advisor Seats
                input#seatCount.form-control(type="number", min="1", value="1")
              .col-md-6
                label(for="costDisplay") Total Cost
                p#costDisplay.mb-0 $0.00

      // ===============================
      // 2) If free => "Add Card" or skip
      // ===============================
      // NOTE: hidden by default, only shows once free plan is clicked
      .free-plan-card-choice(id="freePlanCardChoice")
        p.mb-2.add-card-question Add credit card information now?
      
        // "Yes" container
        input#freeAddCardRadio(type="radio", name="freeCardOption", value="add")
        label.credit-container(for="freeAddCardRadio")
          i.fas.fa-credit-card.icon-yes
          .card-info
            .card-title Yes, add credit card
            .card-description We'll store your card for future usage.
      
        // "No" container
        input#freeNoCardRadio(type="radio", name="freeCardOption", value="no")
        label.credit-container(for="freeNoCardRadio")
          i.fas.fa-ban.icon-no
          .card-info
            .card-title No, continue to dashboard
            .card-description You can add a card later in settings.

      // ===============================
      // 3) Payment Info (Shown if Paid OR if free+addCard)
      // ===============================
      .payment-info
        hr
        p.credit-head Add Credit Card
        .card-wrapper#cardWrapperDiv(style="display:none;")
          .mb-3
            label(for='billingName') Name on Card
            input#billingName.form-control(type='text', placeholder='Jane Doe')

          .mb-3
            label(for='billingEmail') Billing Email
            input#billingEmail.form-control(type='email', placeholder='jane@example.com')

          .mb-3
            label Card Details
            .stripe-element#card-element

          // Stripe error messages
          p#card-errors.text-danger

        hr

      // ===============================
      // 4) Final Step
      // ===============================
      .final-buttons.d-flex.justify-content-end
        button#finishOnboardingBtn.btn.btn-primary.loadable-button(type="button")
          span.button-text Complete Onboarding
          span.button-spinner-wrapper
            span.button-spinner.spinner-border.spinner-border-sm(
              role='status',
              aria-hidden='true'
            )


    // Load Bootstrap Bundle
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")

    // Load Stripe
    script(src="https://js.stripe.com/v3")

    // Pass environment variables
    script.
      window.STRIPE_PUBLIC_KEY = "#{process.env.STRIPE_PUBLIC_KEY || ''}";
      window.PRO_COST_PER_SEAT = "#{process.env.PRO_COST_PER_SEAT || '40'}";
      window.PRO_COST_PER_SEAT_ANNUAL = "#{process.env.PRO_COST_PER_SEAT_ANNUAL || '384'}";
      document.addEventListener('DOMContentLoaded', () => {
        const mainContainer = document.getElementById('onboardingSubContainer');
        if (mainContainer) {
          mainContainer.classList.add('fade-up');
        }
      });

    // Load our custom JS
    script(src="/js/onboardingSubscription.js")
