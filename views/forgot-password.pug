html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name="active-tab" content=activeTab)

    title Forgot Password | SurgeTk

    link(rel='icon' type='image/x-icon' href='/images/favicon.svg')
    
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
    link(rel='stylesheet' href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/loginStyles.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap')
    

  body(class="login-page")
    div#login-container.container.mt-5
        div#login-card.card
            div#login-card-body.card-body
                .login-icon 
                    img(src= "./images/surgetk-logo-blue.svg")
                div#header-container.text-center.mb-4
                    h2#headerTitle.sign-in-header Forgot Password
                    p#headerSubtitle Confirm your details below
                form(action='/forgot-password', method='POST', id='forgot-password-form')
                    //- div.form-group.mb-3
                    //-     label(for='companyId') Company ID
                    //-     input#companyId.form-control(type='text', name='companyId', placeholder='Enter your company ID', required)
                    //-     if errors.companyId
                    //-         div.errorStyling.text-danger
                    //-             i.fas.fa-exclamation-triangle
                    //-             | #{errors.companyId}

                    div.form-group.mb-3
                        label(for='email') Email
                        input#email.form-control(type='email', name='email', placeholder='Enter your email', required)
                        if errors.email
                            div.errorStyling.text-danger
                                i.fas.fa-exclamation-triangle
                                | #{errors.email}

                    div.d-grid
                      button#sendVerificationBtn.btn.btn-primary.loadable-button(type='submit')
                        span.button-text Send Verification Code
                        span.button-spinner-wrapper
                          span.button-spinner.spinner-border.spinner-border-sm(role='status', aria-hidden='true')
                    
                a.btli.mt-3(href='/login')
                    i.fas.fa-arrow-left.mr-2
                    | Back to log in

    script(src='/js/reset-password.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
