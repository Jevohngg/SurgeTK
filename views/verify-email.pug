html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name="active-tab" content=activeTab)

    title Forgot Password | SurgeTk

    link(rel='icon' type='image/x-icon' href='/images/favicon.png')
    
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
    link(rel='stylesheet' href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/loginStyles.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/@fontsource/inter/400.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/@fontsource/roboto/400.css')

  body(class="login-page")

    div#verify-email-form.container.mt-5(style="display: flex;")
      div.card.text-center.p-5
        div.emailIconContainer.mb-4
          i.far.fa-envelope.fa-3x

        h2.vHeadText Check your email
        p.veText We sent a verification link to #{email}

        form(action='/forgot-password/verify', method='POST')
          input(type='hidden', name='email', value=email)

          // 4-digit code entry inputs
          div#verification-code-inputs.d-flex.justify-content-center.mb-4
            input#digit1.verify-digit(type='text', maxlength='1', pattern='[A-Za-z0-9]', required)
            input#digit2.verify-digit(type='text', maxlength='1', pattern='[A-Za-z0-9]', required)
            input#digit3.verify-digit(type='text', maxlength='1', pattern='[A-Za-z0-9]', required)
            input#digit4.verify-digit(type='text', maxlength='1', pattern='[A-Za-z0-9]', required)
            input(type='hidden', name='verificationCode', id='verificationCode')
           
          div.d-grid
            button#verifySubmit.verifyEmailButton.btn.btn-primary(type='submit') Verify email

        if error 
            div.text-danger.mb-3 #{error}

       

        p.dret.mt-3 Didn't receive the email? 
          a.ctrs(href='javascript:void(0)') Click to resend 


        a.btli.mt-3(href='/login')
          i.fas.fa-arrow-left.mr-2
          | Back to log in

    script(src='/js/reset-password.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
