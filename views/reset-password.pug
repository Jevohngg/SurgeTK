html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name="active-tab" content=activeTab)

    title Reset Password | SurgeTk

    link(rel='icon' type='image/x-icon' href='/images/favicon.svg')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
    link(rel='stylesheet' href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/loginStyles.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/@fontsource/inter/400.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/@fontsource/roboto/400.css')

  body(class="login-page")
    div#login-container.container.mt-5
        div#login-card.card
            div#login-card-body.card-body
                .login-icon 
                    img(src= "../images/surgetk-logo-blue.svg")
                div#header-container.text-center.mb-4
                    h2#headerTitle.sign-in-header Reset Password
                    p#headerSubtitle Set a new password below

                form(action='/reset-password', method='POST')
                    input(type='hidden', name='email', value=email)

                    div.form-group.mb-3
                        label(for='newPassword') New Password
                        input#newPassword.form-control(type='password', name='newPassword', placeholder='Enter new password', required)
                        if errors && errors.newPassword
                            div.vErrorStyle.errorStyling.text-danger
                                i.fas.fa-exclamation-triangle
                                | #{errors.newPassword}

                    div.form-group.mb-3
                        label(for='confirmPassword') Confirm New Password
                        input#confirmPassword.form-control(type='password', name='confirmPassword', placeholder='Confirm new password', required)
                        if errors && errors.confirmPassword
                            div.vErrorStyle.errorStyling.text-danger
                                i.fas.fa-exclamation-triangle
                                | #{errors.confirmPassword}

                    div.d-grid
                      button#resetPasswordBtn.btn.btn-primary.loadable-button(type='submit')
                        span.button-text Reset Password
                        span.button-spinner-wrapper
                          span.button-spinner.spinner-border.spinner-border-sm(
                            role='status',
                            aria-hidden='true'
                          )

                a.btli.mt-3(href='/login')
                    i.fas.fa-arrow-left.mr-2
                    | Back to log in

    script(src='/js/reset-password.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
